<% provide(:title, @region.name) %>
<h1><%= @region.name %></h1>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Back to all regions", regions_path %>
      </button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Edit", edit_region_path %>
      </button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Delete", region_path, method: :delete %>
      </button>
    </div>
  </div>
</div>