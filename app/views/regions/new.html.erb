<div class="row">
  <div class="span6 offset3">
    <%= form_for(@region) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :country_id %>
        <%= f.text_field :country_id %>

        <%= f.submit "Create new region", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>