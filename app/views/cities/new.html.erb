<div class="row">
  <div class="span6 offset3">
    <%= form_for(@city) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :region_id %>
        <%= f.text_field :region_id %>

        <%= f.submit "Create new city", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>