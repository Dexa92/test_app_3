<% provide(:title, @country.name) %>
<h1><%= @country.name %></h1>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Back to all countries", countries_path %>
      </button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Edit", edit_country_path %>
      </button>
    </div>
    <div class="col-md-4">
      <button class="btn btn-default">
        <%= link_to "Delete", country_path, method: :delete %>
      </button>
    </div>
  </div>
</div>
